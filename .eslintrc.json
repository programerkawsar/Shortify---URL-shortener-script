{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "endOfLine": "auto",
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4,
        "semi": false
      }
    ],
    "func-names": "off",
    "consistent-return": "off",
    "no-param-reassign": "off",
    "prefer-destructuring": "off",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "no-unused-vars": "off"
  }
}
